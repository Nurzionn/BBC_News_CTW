<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BBCNewsCTW" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="ArticleTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">4</item>
    </style>

    <style name="ArticleTitleTextXHdpi" parent="ArticleTitleText">
        <item name="android:textSize">@dimen/xhdpi_title_size</item>
    </style>

    <style name="ArticleTitleTextMdpi" parent="ArticleTitleText">
        <item name="android:textSize">@dimen/mdpi_title_size</item>
    </style>

    <style name="ArticleContentTextXHdpi" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/xhdpi_text_size</item>
    </style>

    <style name="ArticleContentTextMdpi" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/mdpi_text_size</item>
    </style>

    <style name="ArticleDateAndAuthorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:textSize">@dimen/mdpi_row_text_size</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="RowArticleTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RowArticleTitleTextXHdpi" parent="RowArticleTitleText">
        <item name="android:textSize">@dimen/xhdpi_row_text_size</item>
    </style>

    <style name="RowArticleTitleTextMdpi" parent="RowArticleTitleText">
        <item name="android:textSize">@dimen/mdpi_row_text_size</item>
    </style>
</resources>